<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  android:id="@+id/main_layout">
  <Button
    android:id="@+id/create_btn"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="90dp"
    android:layout_height="70dp"
    android:backgroundTint="#E9E6FA"
    android:drawableTop="@drawable/ic_crop_square_black_24dp"
    android:text="@string/사각형"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
  <com.codesquard.kotlin_drawingapp.CustomView
    android:id="@+id/customView"
    android:layout_width="830dp"
    android:layout_height="670dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
    app:layout_constraintBottom_toTopOf="@+id/create_btn"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:background="#E9E6FA"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <Button
      android:id="@+id/button_background"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_background"/>
    <TextView
      android:id="@+id/text_background"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginStart="16dp"
      android:text="@string/배경색"
      app:layout_constraintBottom_toTopOf="@+id/button_background"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <TextView
      android:id="@+id/text_alpha"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:layout_marginStart="16dp"
      android:text="@string/투명도"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/button_background"/>
    <com.google.android.material.slider.Slider
      android:id="@+id/slider_alpha"
      android:layout_width="120dp"
      android:layout_height="50dp"
      android:stepSize="1.0"
      android:valueFrom="0.0"
      android:valueTo="10.0"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_alpha"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>